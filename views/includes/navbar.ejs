
    <!-- Navbar content -->
    <div class="p-4 " id="navbarText">

      <ul class="navbar navbar-expand-lg navbar-nav   d-flex flex-row align-items-center justify-content-around">

         <!-- Brand Logo and Name -->
        <li>   
          <a class="navbar-brand d-flex align-items-center " href="/listings">
            <h1 class="text-danger fw-bolder  fs-1 mb-0">
              <i class="fa-solid  fa-house-user"></i> <!-- Bootstrap icon -->
              NestAway
            </h1>
          </a>
        </li>

        <!-- Search Form -->
        <li class="nav-item">
          <form method="get" action="/listings/search" class="input-group">
            <div class="form-outline d-flex" data-mdb-input-init>
              <input id="search-focus" 
                <% if (typeof query !== 'undefined' && query) { %> 
                  value="<%= query %>" 
                <% } %>
                type="search" 
