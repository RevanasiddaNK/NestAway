        <!-- User Authentication Links -->
        <li class="nav-item d-flex align-items-center ms-4">
          <% if (!currentUser) { %>
            <a href="/signUp" class="btn btn-outline-dark btn-sm border-0 fs-5 ms-2">SignUp</a>
            <a href="/login" class="btn btn-outline-dark border-0 btn-sm fs-5 fw-sm  ms-2">Login</a>
          <% } else { %>
            <a href="/listings/new" class="btn btn-outline-dark btn-sm border-0  fs-5 ms-2">Add your home</a>
            <a href="/logout" class="btn btn-outline-dark border-0 btn-sm fs-5  ms-2">Logout</a>
          <% } %>
        </li>

      </ul>
    </div>
