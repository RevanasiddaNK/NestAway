<% layout("layouts/boilerplate") -%>

<div class="newForm fs-5 fw-medium w-100 h-80">
    <form 
        method="POST"
        action="/login"
        class="mb-2 ms-4 mt-4 overflow-hidden needs-validation d-flex flex-column justify-content-center align-items-center"
        novalidate
    >
        <h3  class="mb-2 w-75 h-20 mt-4   fs-2 text-center" >
            Welcome back to <b style="color: red;">NestAway</b>
        </h3>

        <div class="mb-2 w-75 w-md-50 h-25" >
            <label 
                for="usernameId"
                class="form-label"
            >
                Username
            </label>

            <input 
                required
                type="text"
                class="form-control custom-input-font-size"
                name="username"
                placeholder="Enter your username"
                id="usernameId"
            />

            <div class="valid-feedback"></div>
            <div class="invalid-feedback">Username can't be empty!</div>
        </div>

        <div  class="mb-2 w-75 w-md-50 h-25">
            <label 
                for="PasswordId"
                class="form-label"
            >
                Password
            </label>

            <input 
                required
                type="password"
                class="form-control custom-input-font-size"
                name="password"
                placeholder="Enter your password"
                id="PasswordId"
            />

            <div class="valid-feedback"></div>
            <div class="invalid-feedback">Password can't be empty!</div>
        </div>

        <button 
            type="submit"
            class="btn btn-outline-dark fs-5 w-20 mt-3 fw-medium btn-sm"
        >
            Login
        </button>

        <p class="m-4">Don't have an account?   <a  href="/signUp" class="text-decoration-none ms-2">   SignUp</a>
        </p>
        
        
    </form>
</div>

